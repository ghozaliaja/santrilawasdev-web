generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model ProjectInvoice {
  id            String   @id @default(uuid())
  clientName    String
  projectName   String
  email         String
  totalAmount   Int
  paidAmount    Int
  status        String   @default("PENDING") // PENDING, PAID
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}
